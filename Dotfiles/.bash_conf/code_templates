## This assumes that my .dirs are working
## Hence the checking for minimal repercusions
## and l33t b4sh scr1pt1ng sk1llz improvement

function error_exists()
{
    if [ ! -e /home/$USER/.bash_config/dirs ]; then
        echo "true"
    else
        echo "false"
    fi
}

function jquery_only()
{
    error=$(error_exists)
    echo "Error status is: $error"
    if [ "$error" == "true" ]; then
        echo "ERROR: NO DIRS"
        return 1
    fi
    echo "Creating template for a jquery project..."
}

function bs4_jq()
{

    error=$(error_exists)
    echo "Error status is: $error"
    if [ "$error" == "true" ]; then
        echo "ERROR: NO DIRS"
        return 1
    fi
    echo "Creating template for basic frontend..."
}
## Exporting to call

alias _tpl_jq="jquery_only"
alias _tpl_full="bs4_jq"
