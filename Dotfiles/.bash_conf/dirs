## My list of dirs
## Check structure in documentation

if [ -d /mnt/e/ ]; then
    echo "E Drive Found!" > /dev/null
    base_dir="/mnt/e"
else
    echo "E Drive Not Found!" > /dev/null
    base_dir="/home/$USER"	
fi

## BASE
export Code="$base_dir/Code"
export Git="$base_dir/Proyectos"
export Apache="/var/www/html"
export Templates="$Git/Templates/"
export WebTemplates="$Templates/Web"
export SharedPHP="$Git/PHPSERVER/WSL"
## Confs
export LinuxConfs="$Git/LinuxConfs"
export Dotfiles="$LinuxConfs/Dotfiles"
